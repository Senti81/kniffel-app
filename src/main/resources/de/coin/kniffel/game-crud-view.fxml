<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.coin.kniffel.controller.crud.GameCrudController">

    <center>
        <TableView fx:id="gameTableView" prefWidth="600">
            <columns>
            <TableColumn fx:id="idColumn" prefWidth="75.0" text="Id" />
                <TableColumn fx:id="numberColumn" prefWidth="100" text="Nr" />
                <TableColumn fx:id="yearColumn" prefWidth="100" text="Jahr" />
                <TableColumn fx:id="dateColumn" text="Datum" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="deleteButton" onAction="#handleDelete" text="Löschen" />
         <Button fx:id="backButton" mnemonicParsing="false" text="Zurück" />
        </HBox>
    </bottom>

</BorderPane>
