<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.coin.kniffel.controller.MainController">
    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>

    <top>
        <HBox alignment="CENTER">
            <Label text="Kniffel" styleClass="title-label" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15">
            <Button
                    onAction="#handlePlayerManagement"
                    text="Spieler verwalten"
                    styleClass="menu-button"
            />
            <Button
                    onAction="#handleScoreManagement"
                    text="Neues Spiel eintragen"
                    styleClass="menu-button"
            />
            <Button
                    onAction="#handleGameView"
                    text="Spieleverwaltung"
                    styleClass="menu-button"
            />
            <Button
                    onAction="#handleScoreView"
                    text="Ergebnisse"
                    styleClass="menu-button"/>
            <BorderPane.margin>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
