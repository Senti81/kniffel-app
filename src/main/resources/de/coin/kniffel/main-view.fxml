<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="de.coin.kniffel.controller.MainController">

    <!-- Title at the top -->
    <top>
        <Label text="Kniffel"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- Buttons in the center -->
    <center>
        <VBox spacing="15" alignment="CENTER">
            <Button text="Spieler verwalten"
                    style="-fx-pref-width: 200px; -fx-pref-height: 30px; -fx-background-color: #3498db; -fx-text-fill: white;"
                    onAction="#handlePlayerManagement"/>
            <Button text="Neues Spiel eintragen"
                    style="-fx-pref-width: 200px; -fx-pref-height: 30px; -fx-background-color: #3498db; -fx-text-fill: white;"
                    onAction="#handleScoreManagement"/>
            <Button text="Spiele ansehen"
                    style="-fx-pref-width: 200px; -fx-pref-height: 30px; -fx-background-color: #3498db; -fx-text-fill: white;"
                    onAction="#handleGameView"/>
            <Button text="Punkte ansehen"
                    style="-fx-pref-width: 200px; -fx-pref-height: 30px; -fx-background-color: #3498db; -fx-text-fill: white;"
                    onAction="#handleScoreView"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button text="Beenden"
                    style="-fx-pref-width: 100px; -fx-background-color: #e30f0f; -fx-text-fill: white"
                    onAction="#handleExit" />
        </HBox>
    </bottom>
</BorderPane>
